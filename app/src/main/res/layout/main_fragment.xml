<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:orientation="vertical">
    <ligang.huse.cn.zhbj.view.LgViewPager
        android:id="@+id/vp_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
       />
    <RadioGroup
        android:padding="5dp"
        android:id="@+id/rg_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/bottom_tab_bg"
        android:orientation="horizontal"
        android:gravity="center">
        <RadioButton
            android:text="首页"
            android:id="@+id/rb_home"
            android:textColor="@color/txt_home_selector"
            android:drawableTop="@drawable/tab_home_selector"
            style="@style/Bottom_Tab_style" />
        <RadioButton
            android:text="新闻中心"
            android:id="@+id/rb_news"
            android:textColor="@color/txt_news_selector"
            android:drawableTop="@drawable/tab_news_selector"
            style="@style/Bottom_Tab_style" />
        <RadioButton
            android:text="智慧服务"
            android:id="@+id/rb_smart"
            android:textColor="@color/txt_smart_selector"
            android:drawableTop="@drawable/tab_smart_selector"
            style="@style/Bottom_Tab_style" />
        <RadioButton
            android:text="政务"
            android:id="@+id/rb_gov"
            android:textColor="@color/txt_gov_selector"
            android:drawableTop="@drawable/tab_gov_selector"
            style="@style/Bottom_Tab_style" />
        <RadioButton
            android:text="设置"
            android:id="@+id/rb_setting"
            android:textColor="@color/txt_setting_selector"
            android:drawableTop="@drawable/tab_setting_selector"
            style="@style/Bottom_Tab_style" />






    </RadioGroup>





</LinearLayout>